@page
@model UserListModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "用户管理";
}

@section head{
    <link href="~/adminlte/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/account/userlist.css" rel="stylesheet" />
}

<section class="content-header">
    <h1>
        用户管理
        <small>账户管理</small>
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <!-- 条件 -->
                <div class="box-header">
                    <div class="row-item">
                        <div class="col-item">
                            <input type="text" class="form-control form-control-cover" placeholder="用户名" style="width:100px" id="input-name">
                        </div>

                        <div class="col-item">
                            <input type="text" class="form-control form-control-cover" style="width:150px" placeholder="联系方式" id="input-phone">
                        </div>

                        <div class="col-item">
                            <select class="form-control form-control-cover" style="width:120px" id="select-sex">
                                <option value="-1">所有性别</option>
                                <option value="1">男</option>
                                <option value="0">女</option>
                            </select>
                        </div>
                        <div class="col-item">
                            <a class="btn btn-default fr" id="btn-search">
                                <i class="fa fa-search"></i> 搜索
                            </a>
                        </div>
                    </div>

                    <!-- 新增用户 -->
                    <div class="row-item">
                        <div class="col-item">
                            <button type="button" class="btn btn-info" id="btn_add" @*data-toggle="modal" data-target="#modal-default" *@>
                                <i class="fa fa-user-plus"> 新增用户</i>
                            </button>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="userListTable" class="table table-bordered change-tr-color">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>姓名</th>
                                <th>账户</th>
                                <th>性别</th>
                                <th>联系方式</th>
                                <th>注册时间</th>
                                <th>是否启用</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>

    <!-- 修改信息的弹窗 start -->
    <div class="modal fade" id="userinfo-dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">用户信息</h4>
                </div>
                <div class="modal-body">
                    <div class="col-item fl" style="width:50%">
                        <div class="row-item">
                            <label>ID：</label>
                            <label type="text" style="width:100px">0</label>
                        </div>
                        <div class="row-item">
                            <label>账户：</label>
                            <input type="text" class="form-control form-control-cover" placeholder="用户名" style="width:200px">
                        </div>
                        <div class="row-item">
                            <label>姓名：</label>
                            <input type="text" class="form-control form-control-cover" placeholder="姓名" style="width:200px">
                        </div>
                        <div class="row-item">
                            <label>性别：</label>
                            <input type="text" class="form-control form-control-cover" placeholder="用户名" style="width:200px">
                        </div>
                        <div class="row-item">
                            <label>联系方式：</label>
                            <input type="text" class="form-control form-control-cover" placeholder="联系方式" style="width:200px">
                        </div>
                        <div class="row-item">
                            <label>是否启用：</label>
                            <input type="text" class="form-control form-control-cover" placeholder="用户名" style="width:200px">
                        </div>
                    </div>
                    <div class="col-item fr" style="width:40%">
                        <div class="row-item">
                            <input type="text" class="form-control form-control-cover" placeholder="用户名" style="width:200px">
                            <button type="button" class="btn btn-primary">上传头像</button>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary">保存</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- 修改信息的弹窗 end -->
</section>

@section Scripts{
    <script src="~/adminlte/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/adminlte/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/js/account/userlist.js"></script>
}