@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="content-header">
    <h1>
        Hi, Welcome to Banana's System.
        <small>     This is a demo project</small>
    </h1>
</section>
<section class="content">
    <!-- USERS LIST -->
    <div class="box box-danger">
        <div class="box-header with-border">
            <h3 class="box-title">最近新增</h3>

            <div class="box-tools pull-right">
                <span class="label label-danger">@Model.UserList.Count 个新用户</span>
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body no-padding">
            <ul class="users-list clearfix">
                @foreach (var user in Model.UserList)
                {
                    <li>
                        <img src="@user.UserHeader" alt="User Image">
                        <a class="users-list-name" href="#">@user.UserName</a>
                        <span class="users-list-date">@user.CreateTime.ToShortDateString()</span>
                    </li>
                }
            </ul>
            <!-- /.users-list -->
        </div>
        <!-- /.box-body -->
        <div class="box-footer text-center">
            <a class="uppercase" asp-page="/Account/UserList">查看全部</a>
        </div>
        <!-- /.box-footer -->
    </div>
    <!--/.box -->
</section>

@section scripts{
<style>
    .users-list img {
        width:100px;
        height:100px;
    }
</style>
}

